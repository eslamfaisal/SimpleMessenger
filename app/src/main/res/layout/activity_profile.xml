<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">



    <ImageView
        android:src="@drawable/profile"
        android:id="@+id/profile_visit_user_image"
        android:layout_width="match_parent"
        android:layout_height="320dp" />

    <TextView
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:text="eslam faisal"
        android:gravity="center"
        android:layout_margin="16dp"
        android:id="@+id/profile_visit_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_visit_user_image" />
    <TextView
        android:textSize="18sp"
        android:text="hey i am here"
        android:gravity="center"
        android:id="@+id/profile_visit_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_visit_user_name" />

    <Button
        android:id="@+id/send_request_button"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        tools:text="send request friend" />

    <Button
        android:enabled="false"
        android:visibility="gone"
        android:id="@+id/decline_request_button"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:text="decline request friend" />

</RelativeLayout>